{
  "httpListen": ":8080",
  "sftpListen": ":2022",
  "users": {
    "admin": {
      "discord": "123456789012345678",
      "password": "strongpassword",
      "controllable": ["*"]
    }
  },
  "servers": {
    "minecraft-1": {
      "workingDir": "/home/atomu/minecraft",
      "image": "mc_java:21",
      "network": {
        "mode": "bridge",
        "mapping": {
          "25565": "25565"
        }
      },
      "mount": {
        "/home/atomu/minecraft/data": "/MC"
      },
      "commands": {
        "start": {
          "entrypoint": "java",
          "arguments": "-Xms2G -Xmx2G -jar server.jar nogui"
        },
        "stop": [
          {
            "type": "attach",
            "arg": "stop\n"
          },
          {
            "type": "sleep",
            "arg": "10s"
          }
        ],
        "backup": [
          {
            "src": "/home/atomu/minecraft/data",
            "dest": "/home/atomu/backups/minecraft-1"
          }
        ],
        "message": "[Discord] ${user}: ${message}"
      },
      "discord": {
        "token": "YOUR_BOT_TOKEN",
        "channel": "123456789012345678",
        "webhook": "https://discord.com/api/webhooks/...",
        "logSetting": "./logs.json"
      }
    }
  }
}
